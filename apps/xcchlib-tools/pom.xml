<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.googlecode.cchlib</groupId>
    <artifactId>cchlib</artifactId>
    <version>4.2-SNAPSHOT</version>
  </parent>

  <artifactId>xcchlib-tools</artifactId>
  <name>xcchlib-tools</name>
  <packaging>jar</packaging>
  <description>Tools based on cchlib</description>
  <url>https://github.com/cClaude/cchlib/</url>

  <properties>
    <!-- Javadoc is build and did not break the build if any error -->
    <maven.javadoc.plugin.fail.on.error>false</maven.javadoc.plugin.fail.on.error>
  </properties>

  <repositories>
  
    <repository>
      <id>cchlib-repository-release</id>
      <name>The cchlib Repository</name>
      <!-- TODO : use a public URL -->
      <url>http://framboise01/maven/release/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>cchlib-repository-snapshot</id>
      <name>The cchlib SNAPSHOT Repository</name>
      <!-- TODO : use a public URL -->
      <url>http://framboise01/maven/snapshot/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>

  </repositories>

  <dependencies>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-core</artifactId>
      <version>4.2-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-io</artifactId>
      <version>4.2-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-i18n</artifactId>
      <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-swing</artifactId>
      <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-core-beta</artifactId>
      <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-net</artifactId>
      <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-json</artifactId>
      <version>4.2-SNAPSHOT</version>
    </dependency>

    <!-- CSVReader -->
    <dependency>
      <groupId>net.sf.opencsv</groupId>
      <artifactId>opencsv</artifactId>
      <version>2.3</version>
    </dependency>

  </dependencies>

</project>
