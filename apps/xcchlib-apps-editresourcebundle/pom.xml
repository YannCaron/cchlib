<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.googlecode.cchlib</groupId>
    <artifactId>cchlib</artifactId>
    <version>4.2-SNAPSHOT</version>
  </parent>

  <artifactId>xcchlib-apps-editresourcebundle</artifactId>
  <name>EditResourcesBundle</name>
  <packaging>jar</packaging>
  <description>Tools based on cchlib</description>
  <url>http://choisnet.ath.cx/cchlib/</url>

  <!-- Global properties -->
  <properties>
    <main.class>com.googlecode.cchlib.apps.editresourcesbundle.EditResourcesBundleApp</main.class>
    <splash.screen.image>com/googlecode/cchlib/apps/editresourcesbundle/splash.png</splash.screen.image>
  </properties>

  <repositories>

    <repository>
      <id>cchlib-repository-release</id>
      <name>The cchlib Repository</name>
      <!-- TODO : use a public URL -->
      <url>http://framboise01/maven/release/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>cchlib-repository-snapshot</id>
      <name>The cchlib SNAPSHOT Repository</name>
      <!-- TODO : use a public URL -->
      <url>http://framboise01/maven/snapshot/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>

  </repositories>

  <dependencies>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-core</artifactId>
      <version>4.2-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
     <groupId>com.googlecode.cchlib</groupId>
     <artifactId>cchlib-io</artifactId>
     <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
     <groupId>com.googlecode.cchlib</groupId>
     <artifactId>cchlib-swing</artifactId>
     <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
     <groupId>com.googlecode.cchlib</groupId>
     <artifactId>cchlib-i18n</artifactId>
     <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-unit</artifactId>
      <version>4.2-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>

    <finalName>${project.name}-${project.version}-r${buildNumber}</finalName>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>${main.class}</mainClass>
            </manifest>
            <manifestEntries>
              <SplashScreen-Image>${splash.screen.image}</SplashScreen-Image>
            </manifestEntries>
          </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

</project>
