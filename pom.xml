      -->
    </profile>
    <profile>
      <id>windows-system</id>
      <activation>
        <os>
          <family>Windows</family>
        </os>
      </activation>
      <!--
      <properties>
        <python.maven.interpreter>python</python.maven.interpreter>
      </properties>
      -->
    </profile>

    <!-- SITES PROFILES
    <profile>
      <!- - local - ->
