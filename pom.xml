  <groupId>com.googlecode.cchlib</groupId>
  <artifactId>cchlib</artifactId>
  <version>4.1.2-SNAPSHOT</version>
  <packaging>pom</packaging>

  <!-- Global properties -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- project.cchlib.version>${project.version}</project.cchlib.version -->
  </properties>

  <!-- Project description -->
  <name>cchlib</name>
  <url>http://todo</url>
  <inceptionYear>2002</inceptionYear>
  <scm>
    <connection>scm:svn:http://cchlib.googlecode.com/svn/trunk/</connection>
    <developerConnection>scm:svn:http://cchlib.googlecode.com/svn/trunk/</developerConnection>
