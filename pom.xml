<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.googlecode.cchlib</groupId>
  <artifactId>cchlib</artifactId>
  <version>4.2-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>cchlib</name>
  <url>https://github.com/cClaude/cchlib/</url>
  <inceptionYear>2002</inceptionYear>

  <!-- Global properties -->
  <properties>
    <google.code.project.name>cchlib</google.code.project.name>
    <build.date>${maven.build.timestamp}</build.date>
    <buildNumber>${maven.build.timestamp}</buildNumber>
    <maven.build.timestamp.format>yyyyMMdd_HHmm</maven.build.timestamp.format>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.java.source.version>1.8</project.java.source.version>
    <project.java.target.version>1.8</project.java.target.version>

    <!-- Javadoc -->
    <maven.javadoc.plugin.version>2.10.4</maven.javadoc.plugin.version>
    <project.javadoc.warning>false</project.javadoc.warning><!-- FIXME = true -->
    <project.javadoc.excludePackageNames>deprecated.*:alpha.*:sample.*:*.undocumented:cx.ath.choisnet.tools.*</project.javadoc.excludePackageNames>
    <additionalparam>-Xdoclint:none</additionalparam>

    <maven.compiler.plugin.version>3.5.1</maven.compiler.plugin.version>
    <maven.jar.plugin.version>3.0.2</maven.jar.plugin.version>
  </properties>

  <prerequisites>
    <maven>3.0.0</maven>
  </prerequisites>

  <!-- maven on googlecode : Project description -->
  <scm>
    <!-- svn on googlecode
    <connection>scm:svn:http://cchlib.googlecode.com/svn/trunk/</connection>
    -->
    <!-- git on googlecode
    <connection>scm:git:https://code.google.com/p/cchlib/</connection>
    -->
    <connection>scm:git:git://framboise02/ralfnet/cchlib.git</connection>
    <developerConnection>scm:git:git:@framboise02:ralfnet/cchlib.git</developerConnection>
    <url>https://github.com/cClaude/cchlib/</url>
  </scm>

  <!-- maven on ftp : Distribution management -->
  <distributionManagement>

    <repository>
      <id>ftp.cchlib.repo.release</id>
      <!-- svn on googlecode
      <url>dav:https://cchlib.googlecode.com/svn/maven-repo/releases</url>
      -->
      <!-- git on googlecode
      <url>dav:https://${google.code.project.name}.googlecode.com/git/maven/2</url>
      -->
      <!--
      <url>ftp://choisnet.ath.cx/repository/cchlib/release</url>
       -->
    </repository>

    <snapshotRepository>
      <!--
      <id>ftp.cchlib.repo.snapshot</id>
      <url>ftp://choisnet.ath.cx/repository/cchlib/release</url>
      <uniqueVersion>false</uniqueVersion>
      -->
     </snapshotRepository>

  </distributionManagement>

  <!-- Developers listed by PMC Chair, PMC, Committers, Contributers, all alphabetical -->
  <developers>
    <developer>
      <id>chc</id>
      <name>Claude CHOISNET</name>
      <organization></organization>
      <roles>
        <role>developer</role>
        <role>integrator</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>

  <repositories>
    <repository>
      <id>central</id>
      <name>Maven Repository Switchboard</name>
      <layout>default</layout>
      <url>http://repo1.maven.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <!-- BUILD
    * ALL sub project will have their java code compiled using java 1.6
  -->
  <build>
    <extensions>
      <!-- maven on googlecode and svn
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav</artifactId>
        <version>1.0-beta-2</version>
      </extension>
      -->
      <!-- maven on googlecode and git
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav-jackrabbit</artifactId>
        <version>2.2</version>
      </extension> -->
      <!-- Enabling the use of FTP
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ftp</artifactId>
         <version>2.6</version>
      </extension>
      -->
    </extensions>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin.version}</version>
        <configuration>
          <verbose />
          <optimize>true</optimize>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
          <source>${project.java.source.version}</source>
          <target>${project.java.target.version}</target>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>

      <!--
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <charset>UTF-8</charset>
          <docencoding>UTF-8</docencoding>
          <docfilessubdirs>true</docfilessubdirs>
          <optimize>true</optimize>
          <showWarnings>${project.javadoc.warning}</showWarnings>
          <showDeprecation>true</showDeprecation>
          <show>protected</show>
          <excludePackageNames>deprecated.*:alpha.*:sample.*:*.undocumented</excludePackageNames>
          <links>
            <link>http://docs.oracle.com/javase/7/docs/api/</link>
          </links>
          <source>${project.java.source.version}</source>
      </configuration>
      </plugin>
      -->

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>2.19.1</version>
        <!--
            By default the Failsafe Maven Plugin looks for integration tests matching
            the patterns */IT.java, **/IT.java and */*ITCase.java.
         -->
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- attach sources to maven artifacts -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

        <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself. -->
        <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
            <lifecycleMappingMetadata>
              <pluginExecutions>
                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <versionRange>[1.3,)</versionRange>
                    <goals>
                      <goal>run</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore />
                  </action>
                </pluginExecution>

                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <versionRange>[2.1,)</versionRange>
                    <goals>
                      <goal>unpack-dependencies</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore />
                  </action>
                </pluginExecution>

                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>hibernate3-maven-plugin</artifactId>
                    <versionRange>[2.2,)</versionRange>
                    <goals>
                      <goal>hbm2ddl</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore />
                  </action>
                </pluginExecution>
              </pluginExecutions>
            </lifecycleMappingMetadata>
          </configuration>
        </plugin>
    </plugins>
  </build>
  <!-- Profiles
    Use mvn -P<profileId> to use a specific profile
  -->
  <profiles>
    <!-- SYSTEM PROFILES -->
    <profile>
      <id>linux-system</id>
      <activation>
        <os>
          <name>Linux</name>
        </os>
      </activation>
    </profile>
    <profile>
      <id>windows-system</id>
      <activation>
        <os>
          <family>Windows</family>
        </os>
      </activation>
    </profile>
