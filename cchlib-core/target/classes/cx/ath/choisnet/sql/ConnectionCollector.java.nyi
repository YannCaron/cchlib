package cx.ath.choisnet.sql;

import java.io.Serializable;
import java.sql.Connection;
import cx.ath.choisnet.lang.reflect.AbstractMappable;
import cx.ath.choisnet.lang.reflect.Mappable;

/**
 * 
 * @author Claude CHOISNET
 */
public class ConnectionCollector extends AbstractMappable
    implements Serializable, Mappable
{
    private final Connection connection;
    
    /**
     * 
     */
    private static final long serialVersionUID = 1L;

    /**
     * 
     * @param connection
     */
    public ConnectionCollector( final Connection connection )
    {
        this.connection = connection;
    }

    @Override
    protected Object getObjectToMap()
    {
        return connection;
    }
    
