<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.googlecode.cchlib</groupId>
    <version>4.2-SNAPSHOT</version>
    <artifactId>cchlib</artifactId>
  </parent>
  <artifactId>cchlib-swing</artifactId>
  <packaging>jar</packaging>
  <name>cchlib-swing</name>
  <description>Contain swing features, Java 7 required</description>
  <url>http://choisnet.ath.cx/cchlib/</url>
  <inceptionYear>2012</inceptionYear>

  <!-- Global properties -->
  <properties>
    <project.java.source.version>1.7</project.java.source.version>
    <project.java.target.version>1.7</project.java.target.version>
  </properties>

  <dependencies>
   <dependency>
     <groupId>com.googlecode.cchlib</groupId>
     <artifactId>cchlib-core</artifactId>
     <version>4.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-io</artifactId>
      <version>4.2-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
        <groupId>com.googlecode.cchlib</groupId>
        <artifactId>cchlib-i18n</artifactId>
        <version>4.2-SNAPSHOT</version>
    </dependency>
    <dependency>
        <groupId>com.googlecode.cchlib</groupId>
        <artifactId>cchlib-unit</artifactId>
        <version>4.2-SNAPSHOT</version>
        <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <includes>
          <include>version.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <excludes>
          <exclude>version.properties</exclude>
        </excludes>
      </resource>
    </resources>

    <extensions>
    </extensions>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.googlecode.cchlib.Version</mainClass>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <charset>UTF-8</charset>
          <docencoding>UTF-8</docencoding>
          <docfilessubdirs>true</docfilessubdirs>
          <excludePackageNames>deprecated.*:alpha.*:sample.*:*.undocumented:cx.ath.choisnet.tools.*</excludePackageNames>
          <links>
            <link>http://download.oracle.com/javase/7/docs/api/</link>
            <!-- link>http://download.oracle.com/javaee/6/api/</link -->
          </links>
          <show>protected</show>
          <source>${project.java.source.version}</source>
      </configuration>
      </plugin>
    </plugins>
  </build>
</project>
