/*
** $VER: WriteCookies.java
*/
package jrpdk.servlet.htmlGenerator.util;

import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.Cookie;

/**
** Classe permettant de lire le contenu d'un cookie.
**
** @author Claude CHOISNET
** @version 1.00 06/10/2000
*/
public class WriteCookies implements WriteReadCookiesInterface
{
private HttpServletResponse response;

/**
** Initialise la variable de session
*/
public WriteCookies( HttpServletResponse response ) // --------------------
{
 this.response = response;
}

/**
** Définie la valeur du cookie donné
**
*/
public void setCookie( String name, String value ) // ---------------------
{
 Cookie c = new Cookie( name, value );

 response.addCookie( c );
}

} // class