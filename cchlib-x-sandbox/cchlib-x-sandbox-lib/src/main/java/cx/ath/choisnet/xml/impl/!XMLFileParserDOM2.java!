package cx.ath.choisnet.xml.impl;

import cx.ath.choisnet.xml.XMLFileParser;
import java.io.File;
import java.util.EnumSet;
import org.xml.sax.ErrorHandler;

/**
**
** @author Claude CHOISNET
** @since   3.01.028
** @version 3.01.028
** @deprecated use {@link cx.ath.choisnet.xml.impl.XMLFileParserDOM2Impl}
*/
@Deprecated
public class XMLFileParserDOM2
    extends XMLParserDOM2
        implements XMLFileParser
{
/** */
private File file;

/**
**
** @deprecated use {@link cx.ath.choisnet.xml.impl.XMLFileParserDOM2Impl}
*/
@Deprecated
public XMLFileParserDOM2( // ----------------------------------------------
    final File                              sourceFile,
    final EnumSet<XMLParserDOM2.Attributs>  attributes,
    final ErrorHandler                      errorHandler
    )
    throws
        java.io.FileNotFoundException,
        java.io.IOException,
        javax.xml.parsers.ParserConfigurationException,
        org.xml.sax.SAXException
{
 super(
    new java.io.FileInputStream( sourceFile ),
    attributes,
    errorHandler
    );

 this.file = sourceFile;
}

/**
** Retourne l'objet File de la source.
*/
public File getFile() // --------------------------------------------------
{
 return this.file;
}

} // class



