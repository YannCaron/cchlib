<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.googlecode.cchlib</groupId>
    <artifactId>cchlib</artifactId>
    <version>4.2-SNAPSHOT</version>
  </parent>

  <artifactId>xcchlib-tools</artifactId>
  <name>xcchlib-tools</name>
  <packaging>jar</packaging>
  <description>Tools based on cchlib</description>
  <url>http://choisnet.ath.cx/cchlib/</url>

  <!-- Global properties -->
  <properties>
    <build.date>${maven.build.timestamp}</build.date>
    <buildNumber>${maven.build.timestamp}</buildNumber>
    <maven.build.timestamp.format>yyyyMMdd_HHmm</maven.build.timestamp.format>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.java.source.version>1.8</project.java.source.version>
    <project.java.target.version>1.8</project.java.target.version>
    <project.javadoc.warning>false</project.javadoc.warning><!-- FIXME = true -->
    <additionalparam>-Xdoclint:none</additionalparam>

    <maven.compiler.plugin.version>3.5.1</maven.compiler.plugin.version>
    <maven.jar.plugin.version>3.0.2</maven.jar.plugin.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-core</artifactId>
      <version>4.2-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-io</artifactId>
      <version>4.2-SNAPSHOT</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
     <groupId>com.googlecode.cchlib</groupId>
     <artifactId>cchlib-swing</artifactId>
     <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.cchlib</groupId>
      <artifactId>cchlib-core-beta</artifactId>
      <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>net.sf.opencsv</groupId>
      <artifactId>opencsv</artifactId>
      <version>2.3</version>
    </dependency>

    <dependency>
        <groupId>net.sf.flexjson</groupId>
        <artifactId>flexjson</artifactId>
        <version>3.2</version>
    </dependency>

    <dependency>
        <groupId>com.googlecode.cchlib</groupId>
        <artifactId>cchlib-net</artifactId>
        <version>4.2-SNAPSHOT</version>
    </dependency>
    <dependency>
        <groupId>com.googlecode.cchlib</groupId>
        <artifactId>cchlib-x-googlecontact</artifactId>
        <version>4.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.17</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <version>1.4</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

</project>
