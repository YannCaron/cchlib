    new HTML_Escape( 171, "&laquo;"     ), // angle quotation mark, left
    new HTML_Escape( 172, "&not;"       ), // not sign
    new HTML_Escape( 173, "&shy;"       ), // soft hyphen
    new HTML_Escape( 174, "&reg;"       ), // registered sign
    new HTML_Escape( 175, "&macr;"      ), // macron
    new HTML_Escape( 176, "&deg;"       ), // degree sign
