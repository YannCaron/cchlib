    new HTML_Escape( 198, "&AElig;"     ), // capital AE diphthong (ligature)
    new HTML_Escape( 199, "&Ccedil;"    ), // capital C, cedilla
    new HTML_Escape( 200, "&Egrave;"    ), // capital E, grave accent
    new HTML_Escape( 201, "&Eacute;"    ), // capital E, acute accent
    new HTML_Escape( 202, "&Ecirc;"     ), // capital E, circumflex accent
    new HTML_Escape( 203, "&Euml;"      ), // capital E, dieresis or umlaut mark
    new HTML_Escape( 204, "&Igrave;"    ), // capital I, grave accent
    new HTML_Escape( 205, "&Iacute;"    ), // capital I, acute accent
    new HTML_Escape( 206, "&Icirc;"     ), // capital I, circumflex accent
    new HTML_Escape( 207, "&Iuml;"      ), // capital I, dieresis or umlaut mark
    new HTML_Escape( 208, "&ETH;"       ), // capital Eth, Icelandic
