    new HTML_Escape( 254, "&thorn;"     ), // small thorn, Icelandic
    new HTML_Escape( 255, "&yuml;"      )  // small y, dieresis or umlaut mark
    };

private int      ascci;
private String   htmlString;

public HTML_Escape( int ascii, String htmlString ) // ---------------------
{
 this.htmlString    = htmlString;
 this.ascci         = ascci;
}

public int      toASCII()   { return ascci; } // --------------------------
public String   toHTML()    { return htmlString; } // ---------------------

} // class

