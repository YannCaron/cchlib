/*
** $VER: ReadCookies.java
*/
package jrpdk.servlet.htmlGenerator.util;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.Cookie;

/**
** Classe permettant de lire le contenu d'un cookie.
**
** @author Claude CHOISNET
** @version 1.00 06/10/2000
*/
public class ReadCookies implements ReadCookiesInterface
{
private HttpServletRequest  request;
private Cookie[]            cookies;

/**11
** Initialise la variable de session
*/
public ReadCookies( HttpServletRequest request ) // -----------------------
{
 this.request   = request;
 this.cookies   = request.getCookies();
}

/**
** Retourne la valeur d'un cookie donné
**
*/
public String getCookie( String cookieName ) // ---------------------------
{
 if( cookies != null ) {
    for( int i = 0; i < cookies.length; i++ ) {
        if( cookies[ i ].getName().equals( cookieName ) ) {
            return cookies[ i ].getValue();
            }
        }
    }

 return null;
}

/**
** @return  true si le cookie est égual à la valeur donnée,
**          false autrement
**
*/
public boolean getBooleanCookie( // ---------------------------------------
    String  cookieName,
    String  expectedValue
    )
{
 String value = getCookie( cookieName );

 if( ( value != null ) && ( value.equals( expectedValue ) ) ) {
    return true ;
    }

 return false;
}


/**
** @return  true si le paramètre est égual à la valeur donnée,
**          false autrement
**
*
public boolean getBooleanParameter( // ------------------------------------
    String              param,
    String              expectedValue
    )
{
 String value = request.getParameter( param );

 if( ( value != null ) && ( value.equals( expectedValue ) ) ) {
    return true;
    }

 return false;
}
*/

} // class